<?xml version="1.0" encoding="utf-8"?>
<Patch>
<!-- Pack -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_FirefoampopPack"]/comps/li[@Class="CompProperties_ApparelReloadable"]/ammoDef</xpath>
    <value>
      <ammoDef>BBLKFirefoam</ammoDef>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Apparel_FirefoampopPack"]/costList/Chemfuel</xpath>
    <value>
      <BBLKFirefoam>30</BBLKFirefoam>
    </value>
  </Operation>
<!-- Shell -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Shell_Firefoam"]/costList/Steel</xpath>
    <value>
      <Steel>10</Steel>
      <BBLKFirefoam>15</BBLKFirefoam>
    </value>
  </Operation>
<!-- Popper -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="FirefoamPopper"]/costList/Steel</xpath>
    <value>
      <Steel>30</Steel>
      <BBLKFirefoam>45</BBLKFirefoam>
    </value>
  </Operation>
<!-- Turret -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Turret_FoamTurret"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs</xpath>
    <value>
      <thingDefs>
        <li>BBLKFirefoam</li>
      </thingDefs>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Turret_FoamTurret"]/costList/Chemfuel</xpath>
    <value>
      <BBLKFirefoam>140</BBLKFirefoam>
    </value>
  </Operation>

</Patch>